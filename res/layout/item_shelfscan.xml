<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_scan_root"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_common_item_selector"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    >

    <LinearLayout
        android:id="@+id/item_scan_folder"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/scan_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/scan_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:singleLine="true"
            android:textColor="#ff494949"
            android:textSize="16dip" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_scan_file"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <ImageView
            android:id="@+id/scan_item_fileicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/scan_item_fileicon"
            android:layout_marginRight="55dp"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/scan_item_filename"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#ff494949"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/scan_item_fileinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#b4b3b3"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/scan_item_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#14be7d"
            android:textSize="15sp" />
    </RelativeLayout>

</FrameLayout>